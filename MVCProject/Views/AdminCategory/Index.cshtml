@using EntityLayer.Concrete;
@model List<Category>
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach(var items in Model)
            {
                <tr>
                    <td>@items.CategoryId</td>
                    <td>@items.CategoryName</td>
                    <td>@items.CategoryDescription</td>
                    <td>@items.CategoryStatus</td>
                    <td><a href="/AdminCategory/DeleteCategory/@items.CategoryId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/AdminCategory/UpdateCategory/@items.CategoryId" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Heading/GetByCategory/@items.CategoryId" class="btn btn-primary">Başlıklar</a></td>
                </tr>
            }
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-success">Yeni Kategori</a>
