@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
   // Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Yeni Başlık Ekleme</h2>
<br />
<head>

</head>
@using (Html.BeginForm("AddHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı:")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br /><br />
        @Html.Label("Başlık Tarihi:")
        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingDate)
        <br /><br />
        @Html.Label("Başlığın Kategorisi:")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br /><br />

        <button class="btn btn-warning">Kaydet</button>
    </div>
}
<div class="input-group date" id="datepicker">
    <input type="text" class="form-control">
    <span class="input-group-append">
        <span class="input-group-text bg-white">
            <i class="fa fa-calendar"></i>
        </span>
    </span>
</div>

<script type="text/javascript">
    $(function () {
        $('#datepicker').datepicker();
    });
</script>


